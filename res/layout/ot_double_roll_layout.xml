<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
<com.changhong.activity.widget.other.datepicker.WheelView
        android:id="@+id/wheel_double_roll1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        wheel:lineSplitHeight="@dimen/wheel_line_split_height"
        wheel:splitLineColor="@color/split_line_gray"
        wheel:textColorFirst="@color/light_s_gray"
        wheel:textColorSecond="@color/light_gray"
        wheel:textColorThird="@color/black"
        wheel:textSizeFirst="@dimen/font_size_s_small"
        wheel:textSizeSecond="@dimen/font_size_s_normal"
        wheel:textSizeThird="@dimen/font_size_s_large" />
<com.changhong.activity.widget.other.datepicker.WheelView
        android:id="@+id/wheel_double_roll2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        wheel:lineSplitHeight="@dimen/wheel_line_split_height"
        wheel:splitLineColor="@color/split_line_gray"
        wheel:textColorFirst="@color/light_s_gray"
        wheel:textColorSecond="@color/light_gray"
        wheel:textColorThird="@color/black"
        wheel:textSizeFirst="@dimen/font_size_s_small"
        wheel:textSizeSecond="@dimen/font_size_s_normal"
        wheel:textSizeThird="@dimen/font_size_s_large" />
</LinearLayout>
