<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_back"
    android:orientation="vertical" >

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="23dp" >

        <LinearLayout
            android:id="@+id/custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" >

            <ImageView
                android:id="@+id/custom_point"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/unonline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/im_custom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/salon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" >

            <ImageView
                android:id="@+id/salon_point"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/unonline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/im_salon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/barber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" >

            <ImageView
                android:id="@+id/barber_point"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/unonline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/im_barber" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/salonRe_paddingLeft"
        android:text="@string/login_string1"
        android:textColor="@color/gray_txt"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/salonRe_paddingLeft"
        android:paddingRight="@dimen/salonRe_paddingRight" >

        <LinearLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/login_string2"
                android:textSize="@dimen/salonRe_txt_size" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/salonRe_paddingRight"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="5dp"
                android:textSize="@dimen/salonRe_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/salonRe_txt_paddingTop"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/set_mima"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/login_string3"
                android:textSize="@dimen/salonRe_txt_size" />

            <EditText
                android:id="@+id/mima"
                android:layout_width="0dp"
                android:layout_height="@dimen/salonRe_paddingRight"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="5dp"
                android:textSize="@dimen/salonRe_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/salonRe_txt_paddingTop"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/set_mima2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/login_string4"
                android:textSize="@dimen/salonRe_txt_size" />

            <EditText
                android:id="@+id/mima2"
                android:layout_width="0dp"
                android:layout_height="@dimen/salonRe_paddingRight"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="5dp"
                android:textSize="@dimen/salonRe_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/login_string5"
                android:textSize="@dimen/salonRe_txt_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/salonRe_paddingRight"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/salonRe_txt_size" />

                <Button
                    android:id="@+id/btn_yanzheng"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/salon_btn"
                    android:text="@string/login_string6"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/salon_btn"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>