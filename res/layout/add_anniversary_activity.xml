<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8" >

    <RelativeLayout
        android:id="@+id/add_anni_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/txt_add_anni"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_back"
            android:gravity="center"
            android:text="@string/add_anniversary"
            android:textColor="@color/txt_title"
            android:textSize="@dimen/txt_large_size" />

        <Button
            android:id="@+id/btn_back_2_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_back_selector" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/txt_btn_light"
            android:textSize="@dimen/txt_smaller_size" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/add_anni_title"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/add_anni_ev_back"
        android:gravity="center_vertical"
        android:hint="@string/family_grade_name"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#a1a1a1"
        android:textSize="@dimen/txt_smaller_size" />

    <Button
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/edit_name"
        android:layout_alignRight="@id/edit_name"
        android:layout_below="@id/edit_name"
        android:layout_marginTop="16dp"
        android:background="@drawable/add_anni_ev_back"
        android:gravity="center_vertical"
        android:hint="@string/time"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColorHint="#a1a1a1"
        android:textSize="@dimen/txt_smaller_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edit_name"
        android:layout_below="@id/txt_time"
        android:layout_marginTop="24dp"
        android:text="@string/set_remind"
        android:textColor="#535353"
        android:textSize="@dimen/txt_tiny_size" />

    <Button
        android:id="@+id/btn_remind_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/edit_name"
        android:layout_alignRight="@id/edit_name"
        android:layout_below="@id/txt_time"
        android:layout_marginTop="46dp"
        android:background="@drawable/add_anni_ev_back"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:singleLine="true"
        android:textSize="@dimen/txt_normal_size" />

</RelativeLayout>