<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/back_no_line_selector" >

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp" >

        <ImageView
            android:id="@+id/img_family_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_family_bg" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_request_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/small_btn_selector"
        android:text="@string/request_join"
        android:textColor="@color/title_back"
        android:textSize="@dimen/txt_small_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/linear_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_family_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_normal_size" />

        <TextView
            android:id="@+id/txt_family_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/txt_item_gray"
            android:textSize="@dimen/txt_tiny_size" />
    </LinearLayout>

</RelativeLayout>