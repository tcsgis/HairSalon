<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/signup_top_bar"
            android:gravity="center"
            android:text="@string/base_information"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_large_size" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:background="@null"
            android:src="@drawable/title_back_selector" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sex_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@drawable/back_no_line_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/sex"
            android:textColor="@color/text_color"
            android:textSize="@dimen/txt_normal_size" />

        <TextView
            android:id="@+id/sexBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:paddingLeft="49dp"
            android:paddingRight="15dp"
            android:text="@string/man"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_normal_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide" />

    <LinearLayout
        android:id="@+id/birthday_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@drawable/back_no_line_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/birthday"
            android:textColor="@color/text_color"
            android:textSize="@dimen/txt_normal_size" />

        <TextView
            android:id="@+id/birthdayBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/invalid_data"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_normal_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide" />

    <LinearLayout
        android:id="@+id/tall_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@drawable/back_no_line_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tall"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/tall"
            android:textColor="@color/text_color"
            android:textSize="@dimen/txt_normal_size" />

        <FrameLayout
            android:id="@+id/tall_FrameLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/tallBtn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/invalid_data"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_normal_size" />

            <TextView
                android:id="@+id/unit_tall"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="95dp"
                android:gravity="center_vertical"
                android:text="@string/unit_tall" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:src="@drawable/right" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide" />

    <LinearLayout
        android:id="@+id/weight_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@drawable/back_no_line_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/weight"
            android:textColor="@color/text_color"
            android:textSize="@dimen/txt_normal_size" />

        <FrameLayout
            android:id="@+id/weight_FrameLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/weightBtn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/invalid_data"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_normal_size" />

            <TextView
                android:id="@+id/unit_weight"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="95dp"
                android:gravity="center_vertical"
                android:text="@string/unit_weight" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:src="@drawable/right" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide" />

    <LinearLayout
        android:id="@+id/address_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@drawable/back_no_line_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/address"
            android:textColor="@color/text_color"
            android:textSize="@dimen/txt_normal_size" />

        <TextView
            android:id="@+id/addressBtn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="49dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/right"
            android:gravity="left|center_vertical"
            android:text="@string/invalid_data"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_normal_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide" />

</LinearLayout>