<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/rela_modify_msg_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/txt_modify_msg_tile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_back"
            android:gravity="center"
            android:textColor="@color/txt_title"
            android:textSize="@dimen/txt_large_size" />

        <Button
            android:id="@+id/btn_back_2_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_back_selector" />

        <Button
            android:id="@+id/btn_popup_fast_switch"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_switch_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_nodify_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rela_modify_msg_title" >

        <EditText
            android:id="@+id/edit_modify_msg"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/cube_white"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_normal_size" />

        <Button
            android:id="@+id/btn_modify_msg_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_modify_msg"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_corner_selector"
            android:text="@string/ok_queren"
            android:textColor="@color/clr_3e"
            android:textSize="@dimen/btn_normal_size" />
    </RelativeLayout>

</RelativeLayout>