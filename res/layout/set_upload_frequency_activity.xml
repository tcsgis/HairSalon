<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/go_where_header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/signup_top_bar"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/title_back_selector" />

        <TextView
            android:id="@+id/go_where"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_large_size" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/linear" >
    </ImageView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/yinsheng"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/noseemodel"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yinshengshuoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/introOfNoSee"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/witch_btn_yinsheng"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:button="@drawable/btn_switch_selector"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/linear" >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="@string/uploadfrequence"
            android:textColor="@color/black"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/linear" >
    </ImageView>

    <RadioGroup
        android:id="@+id/my_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/mode_fast"
            style="@style/check_radio_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableRight="@drawable/reg_agree_selector"
            android:gravity="center_vertical"
            android:text="@string/fastmodel"
            android:textColor="@color/setting_gray"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linear" />

        <RadioButton
            android:id="@+id/mode_slow"
            style="@style/check_radio_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableRight="@drawable/reg_agree_selector"
            android:gravity="center_vertical"
            android:text="@string/slowmodel"
            android:textColor="@color/setting_gray"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linear" />

        <RadioButton
            android:id="@+id/mode_normal"
            style="@style/check_radio_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableRight="@drawable/reg_agree_selector"
            android:gravity="center_vertical"
            android:text="@string/normalmodel"
            android:textColor="@color/setting_gray"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linear" />

        <RadioButton
            android:id="@+id/mode_long"
            style="@style/check_radio_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableRight="@drawable/reg_agree_selector"
            android:gravity="center_vertical"
            android:text="@string/longtimemoldel"
            android:textColor="@color/setting_gray"
            android:textSize="16sp" />
    </RadioGroup>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/linear" >
    </ImageView>

</LinearLayout>