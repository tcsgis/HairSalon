<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/cus_orString2"
                android:textColor="@color/custom_order_gray"
                android:textSize="@dimen/custom_order_size" />

            <Button
                android:id="@+id/delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/delete_custom" />
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="@string/cus_orString3"
            android:textColor="@color/custom_order_gray"
            android:textSize="@dimen/custom_order_size" />

        <TextView
            android:id="@+id/barber_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="@string/cus_orString4"
            android:textColor="@color/custom_order_gray"
            android:textSize="@dimen/custom_order_size" />

        <TextView
            android:id="@+id/salon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="@string/cus_orString33"
            android:textColor="@color/custom_order_gray"
            android:textSize="@dimen/custom_order_size" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="@string/cus_orString5"
            android:textColor="@color/custom_order_gray"
            android:textSize="@dimen/custom_order_size" />

        <TextView
            android:id="@+id/extra_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/cus_orString15"
            android:textColor="@color/custom_order_gray"
            android:textSize="@dimen/custom_order_size" />

        <TextView
            android:id="@+id/coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/cus_orString17"
            android:textColor="@color/custom_order_gray"
            android:textSize="@dimen/custom_order_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_invalid_color" />

    <LinearLayout
        android:id="@+id/doing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" >

            <RatingBar
                android:id="@+id/rate_doing"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:numStars="5"
                android:stepSize="1" >
            </RatingBar>

            <Button
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/salon_btn_invalid"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="@string/cus_orString11"
                android:textColor="@color/white"
                android:textSize="@dimen/custom_order_size" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/wating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/cus_orString13"
            android:textSize="@dimen/custom_order_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/cus_orString14"
            android:textSize="@dimen/custom_order_size" />

        <RatingBar
            android:id="@+id/rate_done"
            style="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/txt1"
            android:numStars="5"
            android:stepSize="1" >
        </RatingBar>

         <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/liferange_share" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/share"
                android:textSize="12sp" />
        </LinearLayout>
        
      <!--   <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/salon_share" /> -->

        <TextView
            android:id="@+id/had_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cus_orString29"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/salon_share" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/activity_back" />

</LinearLayout>