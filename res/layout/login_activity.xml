<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_back"
    android:orientation="vertical" >

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/salonRe_paddingLeft"
        android:paddingRight="@dimen/salonRe_paddingRight" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/login_string2"
                android:textSize="@dimen/salonRe_txt_size" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/salonRe_paddingRight"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="5dp"
                android:textSize="@dimen/salonRe_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/salonRe_txt_paddingTop"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="@string/login_string3"
                android:textSize="@dimen/salonRe_txt_size" />

            <EditText
                android:id="@+id/mima"
                android:layout_width="0dp"
                android:layout_height="@dimen/salonRe_paddingRight"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="5dp"
                android:textSize="@dimen/salonRe_txt_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:padding="3dp"
            android:text="@string/login_string19"
            android:textColor="@color/btn_valid_color" />

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/salon_btn"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/login_string12"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>