<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/txt_member_detail_tile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ed5736"
                android:gravity="center"
                android:text="@string/member_detail"
                android:textColor="@color/txt_title"
                android:textSize="@dimen/txt_large_size" />

            <Button
                android:id="@+id/btn_back_2_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/title_back_selector" />

            <Button
                android:id="@+id/btn_popup_fast_switch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_switch_selector"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp" >

            <ImageView
                android:id="@+id/img_user_portrait"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:src="@drawable/boy" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/img_user_portrait"
                android:textSize="@dimen/txt_large_size" />

            <TextView
                android:id="@+id/txt_user_add_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_user_name"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/img_user_portrait"
                android:textColor="@color/txt_dark_gray"
                android:textSize="@dimen/txt_small_size" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_divide" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/personal_sign"
                android:textColor="@color/txt_dark_gray"
                android:textSize="@dimen/txt_normal_size" />

            <TextView
                android:id="@+id/txt_user_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/txt_normal_size" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow_right_gray"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_divide" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/account_num"
                android:textColor="@color/txt_dark_gray"
                android:textSize="@dimen/txt_normal_size" />

            <TextView
                android:id="@+id/txt_user_id"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/invalid_data"
                android:textSize="@dimen/txt_normal_size" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow_right_gray"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_divide" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/recent_local"
                android:textColor="@color/txt_dark_gray"
                android:textSize="@dimen/txt_normal_size" />

            <TextView
                android:id="@+id/txt_user_location"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/txt_normal_size" />
<!--                 android:text="@string/invalid_data" -->

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow_right_gray"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_divide" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/recent_health"
                android:textColor="@color/txt_dark_gray"
                android:textSize="@dimen/txt_normal_size" />

            <TextView
                android:id="@+id/txt_user_health"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/invalid_data"
                android:textSize="@dimen/txt_normal_size" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow_right_gray"
                android:visibility="gone" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_divide" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_modify_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_corner_selector"
            android:text="@string/modify_remark"
            android:textColor="@color/create_red"
            android:textSize="@dimen/txt_smaller_size" />

        <Button
            android:id="@+id/btn_remove_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_corner_selector"
            android:text="@string/remove_member"
            android:textColor="@color/clr_3e"
            android:textSize="@dimen/txt_smaller_size" />
    </LinearLayout>

</ScrollView>