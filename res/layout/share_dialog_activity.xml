<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView 
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_to"/>
    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E2E2E2" />

    <TextView
        android:id="@+id/share_to_weixin"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:drawableLeft="@drawable/share_to_wechat"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/share_to_wechat"
        android:textColor="@drawable/friends_item_text_selector"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E2E2E2" />

    <TextView
        android:id="@+id/share_to_timeline"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:drawableLeft="@drawable/share_to_timeline"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/share_to_timeline"
        android:textColor="@drawable/friends_item_text_selector"
        android:textSize="14sp" />

</LinearLayout>