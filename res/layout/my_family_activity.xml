<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/my_family_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/txt_my_family"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_back"
            android:gravity="center"
            android:text="@string/my_family"
            android:textColor="@color/txt_title"
            android:textSize="@dimen/txt_large_size" />

        <Button
            android:id="@+id/btn_back_2_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_back_selector" />

        <Button
            android:id="@+id/btn_my_family_invite"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:text="@string/invite"
            android:textColor="@color/txt_btn_light"
            android:textSize="@dimen/txt_normal_size" 
            android:visibility="gone"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/list_my_family"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_family_title"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

</RelativeLayout>