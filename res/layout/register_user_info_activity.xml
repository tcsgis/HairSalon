<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smart="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/signup_top_bar"
        android:gravity="center"
        android:text="@string/user_info"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/birthday_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:background="@drawable/top_line"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/face"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/face"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="49dp"
                    android:background="@null"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/face_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/top_line"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nick"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/nick"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/nickBtn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="49dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/right"
                    android:gravity="left|center_vertical"
                    android:hint="@string/input_nick"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/top_line"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/sex"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/img_check_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="49dp"
                    android:background="@drawable/checkbox_normal"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/man"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/img_check_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/checkbox_normal"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/women"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/top_line"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/birthday"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/birthdayBtn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="49dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/right"
                    android:gravity="left|center_vertical"
                    android:hint="@string/input_birthday"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tall_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/top_line"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/tall"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <FrameLayout
                    android:id="@+id/tall_FrameLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/tallBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="49dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/input_height"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/unit_tall"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="95dp"
                        android:gravity="center_vertical"
                        android:text="@string/unit_tall"
                        android:visibility="gone" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:src="@drawable/right" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weight_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/top_line"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/weight"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <FrameLayout
                    android:id="@+id/weight_FrameLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/weightBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="49dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/input_weight"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/unit_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="95dp"
                        android:gravity="center_vertical"
                        android:text="@string/unit_weight"
                        android:visibility="gone" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:src="@drawable/right" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/top_line"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/address"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/addressBtn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="49dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@drawable/right"
                    android:gravity="left|center_vertical"
                    android:hint="@string/input_address"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/linear" >
            </ImageView>

            <Button
                android:id="@+id/btn_init_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_corner_selector"
                android:text="@string/save"
                android:textColor="@color/create_red"
                android:textSize="@dimen/btn_normal_size" />

            <Button
                android:id="@+id/btn_init_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_corner_selector"
                android:text="@string/skip"
                android:textColor="@color/clr_3e"
                android:textSize="@dimen/btn_normal_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>