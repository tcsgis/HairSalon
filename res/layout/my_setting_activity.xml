<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_family_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/txt_my_family"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_back"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_large_size" />

        <Button
            android:id="@+id/btn_back_2_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_back_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/line_divide" >
            </ImageView>

            <LinearLayout
                android:id="@+id/change_passw_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@drawable/back_no_line_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="@string/change_passw"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_change_passw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/right"
                    android:gravity="left"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" >
            </ImageView>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/line_divide" >
            </ImageView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@drawable/back_no_line_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="20"
                    android:text="@string/receive_notify"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <!-- <com.changhong.activity.util.SwitchButton
                    android:id="@+id/receive_notify_switchBtn"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent" /> -->
                    
               <CheckBox
		            android:id="@+id/receive_notify_switchBtn"
		            android:layout_width="52dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="10dp"
		            android:button="@drawable/btn_switch_selector" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" >
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/back_no_line_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:layout_marginLeft="13dp"
                    android:text="@string/sound_remind"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <!-- <com.changhong.activity.util.SwitchButton
                    android:id="@+id/sound_remind_switchBtn"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent" /> -->
                 <CheckBox
		            android:id="@+id/sound_remind_switchBtn"
		            android:layout_width="52dp"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="10dp"
		            android:button="@drawable/btn_switch_selector" />
                     
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" >
            </ImageView>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/line_divide" >
            </ImageView>

            <LinearLayout
                android:id="@+id/update_check_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/back_no_line_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="@string/update_check"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_update_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:src="@drawable/red_point"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_update_check"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="13dp"
                    android:drawableRight="@drawable/right"
                    android:gravity="center_horizontal"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" >
            </ImageView>

            <LinearLayout
                android:id="@+id/help_center_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/back_no_line_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="@string/help_center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/right"
                    android:gravity="left"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" >
            </ImageView>

            <LinearLayout
                android:id="@+id/feedback_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/back_no_line_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="@string/feedback"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/right"
                    android:gravity="left"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" >
            </ImageView>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/line_divide" >
            </ImageView>

            <LinearLayout
                android:id="@+id/about_us_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/back_no_line_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="@string/about_us"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/right"
                    android:gravity="left"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" >
            </ImageView>

            <Button
                android:id="@+id/quit"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_corner_selector"
                android:text="@string/quit_account"
                android:textColor="@color/create_red"
                android:textSize="@dimen/btn_normal_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>