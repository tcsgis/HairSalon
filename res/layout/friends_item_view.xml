<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="74dp"
    android:layout_height="75dp"
    android:background="@drawable/friends_item_background_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="73dp"
        android:layout_height="74dp"
        android:layout_centerInParent="true"
        android:padding="2sp" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/head_image"
        android:background="@drawable/friends_item_selector"
        android:gravity="center_horizontal"
        android:maxEms="11"
        android:singleLine="true"
        android:text="@string/nick"
        android:textColor="@drawable/friends_item_text_selector"
        android:textSize="11sp" />

</RelativeLayout>