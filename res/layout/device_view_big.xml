<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whole_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/device_bg"
    android:orientation="vertical"
    tools:context=".activity.where.DeviceView" >

    <LinearLayout
        android:id="@+id/upper_all"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/upper_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/linear_refresh"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/device_refresh_btn"
                android:drawableRight="@drawable/device_split"
                android:gravity="center"
                android:text="@string/refresh"
                android:textColor="@drawable/friends_item_text_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/linear_setting"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/device_setting_btn"
                android:drawableRight="@drawable/device_split"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@drawable/friends_item_text_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/linear_footprint"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/device_footprint_btn"
                android:drawableRight="@drawable/device_split"
                android:gravity="center"
                android:text="@string/footprint"
                android:textColor="@drawable/friends_item_text_selector"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/linear_share"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/device_share_btn"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="@drawable/friends_item_text_selector"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upper_menuf"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/linear_refreshf"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/device_refresh_btn"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/refresh"
                android:textColor="@drawable/friends_item_text_selector"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/device_split" />

            <TextView
                android:id="@+id/linear_footprintf"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/device_footprint_btn"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/footprint"
                android:textColor="@drawable/friends_item_text_selector"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/device_split" />

            <TextView
                android:id="@+id/linear_navigation"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/route_navigation_blue"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/activity_baidumap_drivedetail_label_navigation"
                android:textColor="@drawable/friends_item_text_selector"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/device_line"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/device_line"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/local_linearlayout"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nicknames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/nicknameslocation"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.changhong.activity.widget.MarqueeTextView
                android:id="@+id/last_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="5dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/locationstring"
                android:textColor="@color/dimgray"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/last_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/last_online"
            android:textColor="@color/darkgray"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>