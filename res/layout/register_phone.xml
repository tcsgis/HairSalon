<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:background="@drawable/corners"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="93dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="+86"
        android:textColor="#4994f1"
        android:textSize="14sp" />
    
    <View 
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/device_split"/>

    <com.changhong.activity.login.IconEditText
        xmlns:signup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signup_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-6dp"
        signup:hint="@string/signup_phone"
        signup:inputType="phone" />

</LinearLayout>