<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充颜色前面两位是透明度argb -->
    <solid android:color="#00000000" />

    <!-- 边框线 宽度、颜色、透明度 -->
    <stroke
        android:width="1dp"
        android:color="#55aaaaaa" />

    <!-- 内部UI与边框的距离 -->
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />
    
    <!-- 圆角，这里四个角一样都是10dp，也可单独设置某个角 -->
    <corners
        android:radius="10dp" />

</shape>